<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container-fluid">
            <button data-target=".nav-collapse" data-toggle="collapse" class="btn btn-navbar" type="button">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="/" class="brand"><%= config.author %></a>

            <div class="nav-collapse collapse">
                <p class="navbar-text pull-right">

                </p>
                <ul class="nav">
                    <% for (var i in theme.menu){ %>
                    <li><a href="<%= theme.menu[i] %>"><%= __(i) %></a></li>
                    <% } %>

                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#"><%= __('tags') %>(<%= site.tags.length %>)<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <% if(site.tags.length) {%>
                            <% site.tags.sort('name').each(function(item){ %>
                            <li><a href="<%- config.root %><%- item.path %>" ><i class="icon-tags"></i><%= item.name %> <small><%= item.posts.length %></small></a>

                            </li>
                            <% }); %>
                            <%}%>

                        </ul>
                    </li>
                </ul>


            </div>
            <!--/.nav-collapse -->
        </div>
    </div>
</div>