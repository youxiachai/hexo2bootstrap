<div class="content">
    <header class="page-header">
        <% if (item.layout != 'page'){ %>
        <div class="icon"></div>
        <time datetime="<%= item.date.toDate().toISOString() %>"><a href="<%- config.root %><%- item.path %>"><%= item.date.format(config.date_format) %></a></time>
        <% } %>
        <%- partial('../_partial/title') %>
    </header>
    <div class="entry" id="<%= item.layout %>">
        <%- item.content %>

    </div>


    <div class="hidden-phone widget">
        <%- partial('../_widget/jiathis') %>
        <%- partial('../_widget/duoshuo') %>
    </div>
</div>